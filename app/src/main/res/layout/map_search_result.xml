<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MapScreen"
    android:layout_width="360dp"
    android:layout_height="640dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_search_bar"
        android:drawableLeft="@drawable/icon_left_arrow"
        android:drawableRight="@drawable/icon_cancel"
        android:drawablePadding="6dp"
        android:elevation="5dp"
        android:fontFamily="@font/roboto"
        android:includeFontPadding="true"
        android:paddingLeft="13dp"
        android:paddingRight="14dp"
        android:text="Nhà văn hoá sinh viên ĐHQG TP.HCM"
        android:textColor="#000102"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_map_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="445dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_info_nearby"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_nha_van_hoa_2"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_nha_van_hoa_1"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_nha_van_hoa_3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:elevation="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/line_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:text="Nhà Văn hóa Sinh viên ĐHQG TP.HCM"
                android:textColor="#000102"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/roboto"
                    android:text="4,0"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto"
                    app:srcCompat="@drawable/image_star_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/roboto"
                    android:text="120 · 22km"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/line_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linh Trung, Thủ Đức, TP.HCM"
                android:textColor="#707070"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="3dp"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/line_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mở cửa suốt ngày đêm"
                android:textColor="#37B4D1"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="3dp"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btn_path"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="11dp"
                    app:srcCompat="@drawable/btn_path" />

                <ImageButton
                    android:id="@+id/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="11dp"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/btn_start" />

                <ImageButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="11dp"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/btn_save" />

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="11dp"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/btn_share" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>